@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginVM
@using Profi.ViewModels
@{
    ViewData["Title"] = "Login";
}

<div class="col-lg-4 mx-auto">
    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <div class="brand-logo">
            <img src="~/Admin/images/logo.svg" alt="logo">
        </div>

        <h6 class="font-weight-light">Sign in to continue.</h6>
        <form class="pt-3" method="post">
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" asp-validation-for="">
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="mt-3">
                <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-area="AdminPanel" asp-action="Index" >SIGN IN</a>
            </div>
            <div class="my-2 d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <label class="form-check-label text-muted">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                        Keep me signed in
                    </label>
                </div>
            </div>

        </form>
    </div>
</div>

